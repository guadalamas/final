<div class="contenedor1" style="margin-top: 70px;">

    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{persona}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger"> Cerrar sesión <i
                        class="fas fa-sing-out-alt"></i></a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-7" style="margin-top: -9px;">
            <h2>listado de noticias más importantes</h2>
        </div>
        <div class="col-5 text-right">
            <a href="" class="btn btn-success"><i class="fas fa-plus"></i>nuevo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" class="text-right">Acciones</th>
                    </tr>
                </thead>

                <tbody>

                    {{#each novedades  }}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{subtitulo}}</td>
                        <td class="text-right">
                            <a href="" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{}/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>

</div>