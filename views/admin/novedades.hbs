<div class="contenedor1" style="margin-top: 70px;">

    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>
                    <h1 style="font-weight: 800;">Bienvenido a la administración de novedades, {{persona}}!</h1>
                </span>

            </p>
        </div>
    </div>
    <div class="list-noticias" style="margin-top: -9px;">
        <h2>Listado de noticias</h2>
    </div>
    <div class="col-2 text-right">

    </div>



    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark" style="background-color: #333333;">
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" class="text-right">Subtitulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col"><a href="/admin/novedades/agregar" class="btn btn-success"><i
                                    class="fas fa-plus"></i>Nuevo</a></th>
                    </tr>
                </thead>

                <tbody>

                    {{#each novedades }}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{subtitulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i
                                    class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>


    <a href="/admin/login/logout" class="btn btn-danger"> Cerrar sesión <i class="fas fa-sing-out-alt"></i></a>
</div>