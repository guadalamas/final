<div class="cuadrado" style="border-color: #333333;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" style="margin-top: 80px;">
                <div class="form-group">
                    <input type="text" class="form-control sesion" placeholder="Titulo" style="border-color: #333333;"
                        name="titulo">
                </div>

                <div class="form-group">
                    <textarea class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>

            </form> 
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}


        </div>
    </div>
</div>