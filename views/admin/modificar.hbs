<div class="cuadrado" style="border-color: #333333;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post" style="margin-top: 80px;">
                <div class="form-group">
                    <input type="hidden" value="{{novedad.id}}" style="border-color: #333333;"
                        name="id">
                </div>

                <div class="form-group">
                    <label for="">Título</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>

                <div class="form-group">
                    <label for="">Subtítulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}">
                </div>

                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <input type="text" class="form-control" name="cuerpo" value="{{novedad.cuerpo}}">
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>

            </form> 
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}


        </div>
    </div>
</div>