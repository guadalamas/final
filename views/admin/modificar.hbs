<div class="cuadrado" style="background-color: #33333375;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 class="modific">Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post" style="margin-top: 20px;"
                enctype="multipart/form-data">
                <div class="form-group">
                    <input type="hidden" value="{{novedad.id}}" style="border-color: #333333;" name="id">
                </div>

                <div class="form-group">
                    <label for="">Título</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}"
                        style="border-color: #333333 ">
                </div>

                <div class="form-group">
                    <label for="">Subtítulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}"
                        style="border-color: #333333 ">
                </div>

                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea class="form-control" name="cuerpo"
                        style="border-color: #333333 "> {{novedad.cuerpo}} </textarea>
                </div>

                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imagen
                            actual?</label><input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>

                <button type="submit" class="btn btn-primary">Modificar</button>

            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}

        </div>
    </div>

</div>